@model FinancialRecordIndexViewModel

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New Record</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Category</th>
                <th>Type</th>
                <th>User ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Records)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Description</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Category?.Name</td> <!-- Assuming Category has a Name property -->
                    <td>@item.TransactionType?.Name</td> <!-- Assuming TransactionType has a Name property -->
                    <td>@item.UserId</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

