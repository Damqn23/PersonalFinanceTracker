@model PersonalFinanceTracker.Core.Models.FinancialRecordDetailsViewModel

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="mb-3">
        <strong>Description:</strong> @Model.Record.Description
    </div>
    <div class="mb-3">
        <strong>Amount:</strong> @Model.Record.Amount.ToString("C")
    </div>
    <div class="mb-3">
        <strong>Date:</strong> @Model.Record.Date.ToShortDateString()
    </div>
    <div class="mb-3">
        <strong>Category:</strong> @Model.Record.Category?.Name
    </div>
    <div class="mb-3">
        <strong>Type:</strong> @Model.Record.TransactionType?.Name
    </div>
    <div class="mb-3">
        <strong>User ID:</strong> @Model.Record.UserId
    </div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Record.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
